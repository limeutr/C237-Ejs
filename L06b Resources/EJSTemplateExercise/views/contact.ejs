      <body>
        <div class="container mt-3">
            <h2>Contact Us</h2>
            <form action="/submit" method="post">
                <div class="mb-3 mt-3">
                    <label for="name">Name:</label>
                    <input type="text" class="form-control" id="name" placeholder="Enter Name" name="name" required>
                </div>
                <div class="mb-3 mt-3">
                    <label for="email">Email:</label>
                    <input type="email" class="form-control" id="email" placeholder="Enter Email" name="email" required>
                </div>
                <div class="mb-3 mt-3">
                    <label for="contactNo">Contact No.:</label>
                    <input type="text" class="form-control" id="contactNo" placeholder="Enter Contact Number" name="contactNo" required>
                </div>
                <div class="mb-3 mt-3">
                    <label for="message">Message:</label>
                    <textarea class="form-control" id="message" name="message" placeholder="Enter your message" required></textarea>
                </div>
                <div class="mb-3 mt-3">
                    <label for="comments">Comments:</label>
                    <textarea class="form-control" id="comments" name="comments" placeholder="Enter additional comments"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
